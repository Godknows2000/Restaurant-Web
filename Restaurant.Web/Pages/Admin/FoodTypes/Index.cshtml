@page
@model IndexModel

<partial name="_Notification" />

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h3 class="text-primary">Category List</h3>
        </div>
        <div class="col-6 text-end">
            <a asp-page="Add" class="btn btn-primary"><i class="fa-solid fa-plus"></i> Add new..</a>
        </div>
        <br /><br />
        <table class="table table-striped table-hover border-bottom" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Name
                    </th>
                    <th>

                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model.FoodTypes)
                {
                    <tr>
                        <td width="50%"><a asp-page="Details" asp-route-id="@item.Id">@item.Name</a></td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-warning mx-2"><i class="fa fa-pen-to-square"></i></a>
                                <a asp-page="Delete" asp-route-id="@item.Id" class="btn btn-danger mx-2"><i class="fa-solid fa-trash"></i></a>
                            </div>          
                        </td>
                    </tr>
                }
                
            </tbody>
        </table>
    </div>
</div>
