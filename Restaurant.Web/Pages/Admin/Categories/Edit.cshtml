@page
@model EditModel

<form method="post" class="ps-5">
    @*<input hidden asp-for="Category.Id" />*@
        <h3 class="mt-5">Edit..</h3>
    <div class="card col-md-4 mt-1">
        <div class="card-header bg-secondary">

        </div>
        <div class="card-body">
            <div asp-validation-summary="All"></div>
            <div class="form-floating">
                <input asp-for="Category.Name" name="Name" class="form-control" type="text" />
                <label>Name</label>
                <span class="text-danger" asp-validation-for="Category.Name"></span>
            </div>
            <div class="form-floating mt-3">
                <input asp-for="Category.DisplayOrder" name="displayOrder" class="form-control" type="text" />
                <label>Display Order</label>
                <span class="text-danger" asp-validation-for="Category.DisplayOrder"></span>
            </div>
        </div>
        <div class="card-footer text-end">
            <button type="submit" class="btn btn-success"><i class="fa-solid fa-floppy-disk"></i> Submit</button>
        </div>
    </div>
</form>
@section scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    }